# Uncomment the next line to define a global platform for your project
platform :ios, '11.2'

target 'Champlain Compass' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Champlain Compass

  target 'Champlain CompassTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'Champlain CompassUITests' do
    inherit! :search_paths
    # Pods for testing
  end

  pod 'Firebase/Core'
  pod 'Firebase/Database'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  pod 'GoogleSignIn'
  pod 'SDWebImage/GIF'
  pod 'SDWebImage/Core'
  pod 'SDWebImage/WebP'
  pod 'JTAppleCalendar', '~> 7.0'
  pod 'GoogleMaps'
  pod 'GooglePlaces'

end
